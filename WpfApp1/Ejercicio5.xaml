<Window x:Class="WpfApp1.Ejercicio5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Ejercicio5" Height="450" Width="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="top">Selecciona fuente y estilo</TextBlock>
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button>OK</Button>
            <Button>CANCELAR</Button>
        </WrapPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".2*"/>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width=".4*"/>
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0"></ListBox>
            <ListBox Grid.Column="1"></ListBox>
            <ListBox Grid.Column="2"></ListBox>
            <GroupBox Header="Vista Previa:" Grid.Column="3"></GroupBox>
        </Grid>
        
    </DockPanel>
</Window>
